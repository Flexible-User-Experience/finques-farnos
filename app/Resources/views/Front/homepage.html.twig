{% extends 'Front/layout.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}
{% block metadescription %}{% endblock %}
{% block metakeywords %}{% endblock %}

{% block main %}
    {% if slides | length > 0 %}
        <div class="container">
            <div id="carousel-homepage" class="carousel slide" data-ride="carousel">
                {#<!-- Indicators -->#}
                <ol class="carousel-indicators">
                    {% for slide in slides %}
                        <li data-target="#carousel-homepage" data-slide-to="0"{% if loop.first %} class="active"{% endif %}></li>
                    {% endfor %}
                </ol>
                {#<!-- Wrapper for slides -->#}
                <div class="carousel-inner" role="listbox">
                    {% for slide in slides %}
                        <div class="item{% if loop.first %} active{% endif %}">
                            <a href="{{ path('front_properties') }}"><img class="img-responsive" src="{{ vich_uploader_asset(slide, 'imageFile') | imagine_filter('1200xY') }}" alt="{{ slide.metaAlt }}" title="{{ slide.metaTitle }}"></a>
                            {#<div class="carousel-caption">...</div>#}
                        </div>
                    {% endfor %}
                </div>
                {#<!-- Controls -->#}
                <a class="left carousel-control" href="#carousel-homepage" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" data-aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-homepage" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" data-aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    {% endif %}
    <div class="container container-xs-height">
        {#<!-- Example row of columns -->#}
        {% if properties | length > 0 %}
        <div class="row row-xs-height">
            {% for property in properties %}
                <div class="col-md-4 col-xs-height col-top">
                    <hr class="hr-homepage">
                    <div class="thumbnail homepage{% if property.offerSpecial or property.offerDiscount %} bg-dark-orange{% endif %}">
                        {% if property.firstEnabledImage %}
                            <a href="{{ path('front_property', {type: property.type.nameSlug, name: property.nameSlug}) }}"><img class="img-responsive" src="{{ vich_uploader_asset(property.firstEnabledImage, 'imageFile') | imagine_filter('400xY') }}" alt="{{ property.firstEnabledImage.metaAlt }}" title="{{ property.firstEnabledImage.metaTitle }}"></a>
                        {% endif %}
                        <div class="caption">
                            <h2 class="no-m"><a href="{{ path('front_property', {type: property.type.nameSlug, name: property.nameSlug}) }}">{{ property.name }}</a></h2>
                            {% if property.showPriceOnlyWithNumbers %}
                                <h3 class="no-m-top extra-m-bottom">{{ property.price | number_format(0, '\'', '.') }} €{% if property.oldPrice %} <small>{{ 'homepage.property.before' | trans }} {{ property.oldPrice | number_format(0, '\'', '.') }} €</small>{% endif %}</h3>
                            {% else %}
                                <h3 class="no-m-top extra-m-bottom">{{ 'homepage.property.since' | trans }} {{ property.price | number_format(0, '\'', '.') }} €</h3>
                            {% endif %}
                            {#<p>{{ property.description }}</p>#}
                            <ul class="ribbons list-unstyled list-inline">
                                {% if property.offerSpecial %}
                                    <li class="special-offer">{{ 'homepage.property.offer.special' | trans }}</li>
                                {% endif %}
                                {% if property.offerDiscount and not property.offerSpecial %}
                                    <li class="discount-offer">{{ 'homepage.property.offer.discount' | trans }}</li>
                                {% endif %}
                                {% if property.squareMeters %}
                                    <li class="square-meters">{{ property.squareMeters }} m<sup>2</sup></li>
                                {% endif %}
                                {% if property.rooms %}
                                    <li class="square-rooms">{{ property.rooms }} {{ 'homepage.property.rooms' | trans }}</li>
                                {% endif %}
                                {% if property.bathrooms %}
                                    <li class="square-bathrooms">{{ property.bathrooms }} {{ 'homepage.property.bathrooms' | trans }}</li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
                {% if loop.index % 3 == 0 %}
                        </div>
                    <div class="row row-xs-height">
                {% endif %}
            {% endfor %}
        </div>
        {% endif %}
    </div>
{% endblock %}
