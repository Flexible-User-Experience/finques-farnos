{% extends '::Front/layout.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}
{% block metadescription %}{% endblock %}
{% block metakeywords %}{% endblock %}

{% block main %}
    <div class="jumbotron">
        <div class="container">
            <div id="carousel-hompage" class="carousel slide" data-ride="carousel">
                {#<!-- Indicators -->#}
                <ol class="carousel-indicators">
                    <li data-target="#carousel-hompage" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-hompage" data-slide-to="1"></li>
                    <li data-target="#carousel-hompage" data-slide-to="2"></li>
                </ol>
                {#<!-- Wrapper for slides -->#}
                <div class="carousel-inner" role="listbox">
                    {% for slide in slides %}
                        <div class="item{% if loop.first %} active{% endif %}">
                            <img src="{{ vich_uploader_asset(slide, 'slider_image') | imagine_filter('300xY') }}" alt="{{ slide.metaAlt }}" title="{{ slide.metaTitle }}">
                            {#<div class="carousel-caption">...</div>#}
                        </div>
                    {% endfor %}
                </div>
                {#<!-- Controls -->#}
                <a class="left carousel-control" href="#carousel-hompage" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" data-aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-hompage" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" data-aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="container">
        {#<!-- Example row of columns -->#}
        {% if properties | length > 0 %}
        <div class="row">
            {% for property in properties %}
                <div class="col-md-4">
                    <div class="thumbnail">
                        {% if property.firstEnabledImage %}
                            <img src="{{ vich_uploader_asset(property.firstEnabledImage, 'property_image') | imagine_filter('100x100') }}" alt="{{ property.firstEnabledImage.metaAlt }}" title="{{ property.firstEnabledImage.metaTitle }}">
                        {% endif %}
                        <div class="caption">
                            <h2>{{ property.name }}</h2>
                            {% if property.showPriceOnlyWithNumbers %}
                                <h3>{{ property.price | number_format(0, '\'', '.') }} €{% if property.oldPrice %} <small>{{ 'homepage.property.before' | trans }} {{ property.oldPrice | number_format(0, '\'', '.') }} €</small>{% endif %}</h3>
                            {% else %}
                                <h3>{{ 'homepage.property.since' | trans }} {{ property.price | number_format(0, '\'', '.') }} €</h3>
                            {% endif %}
                            <p>{{ property.description }}</p>
                            <div class="btn-group" role="group" data-aria-label="icons">
                                {% if property.offerSpecial %}
                                    <button type="button" class="btn btn-default">{{ 'homepage.property.offer.special' | trans }}</button>
                                {% endif %}
                                {% if property.offerDiscount and not property.offerSpecial %}
                                    <button type="button" class="btn btn-default">{{ 'homepage.property.offer.discount' | trans }}</button>
                                {% endif %}
                                {% if property.squareMeters %}
                                    <button type="button" class="btn btn-default">{{ property.squareMeters }} m<sup>2</sup></button>
                                {% endif %}
                                {% if property.rooms %}
                                    <button type="button" class="btn btn-default">{{ property.rooms }} {{ 'homepage.property.rooms' | trans }}</button>
                                {% endif %}
                                {% if property.bathrooms %}
                                    <button type="button" class="btn btn-default">{{ property.bathrooms }} {{ 'homepage.property.bathrooms' | trans }}</button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                {% if loop.index % 3 == 0 %}
                        </div>
                    <div class="row">
                {% endif %}
            {% endfor %}
        </div>
        {% endif %}
    </div>
{% endblock %}
