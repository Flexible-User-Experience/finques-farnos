{% extends 'Front/layout.html.twig' %}

{% block title %}{{ 'frontend.legal' | trans | capitalize }} Â· {{ parent() }}{% endblock %}
{% block metadescription %}{% endblock %}
{% block metakeywords %}{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            {#<div class="col-md-4">#}
                {#<img class="img-responsive" src="http://lorempixel.com/c/360/300/nature/" alt="dummy"/>#}
            {#</div>#}
            <div class="col-md-12">
                <div class="well">
                    <h1 class="no-m-top extra-m-bottom"><i class="fa fa-exclamation-triangle"></i> {{ 'frontend.legal' | trans | upper }}</h1>
                    <p>{{ 'legal.text' | trans | raw }}</p>
                    <h4 class="special-h4-addons"><i class="fa fa-legal"></i> {{ 'legal.law.title' | trans | upper }}</h4>
                    <p>{{ 'legal.law.text' | trans | raw }}</p>
                    <h4 class="special-h4-addons"><i class="fa fa-file-o"></i> {{ 'legal.content.title' | trans | upper }}</h4>
                    <p>{{ 'legal.content.text' | trans | raw }}</p>
                    <h4 class="special-h4-addons"><i class="fa fa-copyright"></i> {{ 'legal.property.title' | trans | upper }}</h4>
                    <p>{{ 'legal.property.text' | trans | raw }}</p>
                    <h4 class="special-h4-addons"><i class="fa fa-link"></i> {{ 'legal.links.title' | trans | upper }}</h4>
                    <p>{{ 'legal.links.text' | trans | raw }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footlangca %}{{ path('front_legal', {'_locale': 'ca'}) }}{% endblock %}
{% block footlanges %}{{ path('front_legal', {'_locale': 'es'}) }}{% endblock %}
{% block footlangen %}{{ path('front_legal', {'_locale': 'en'}) }}{% endblock %}
{% block footlangfr %}{{ path('front_legal', {'_locale': 'fr'}) }}{% endblock %}
