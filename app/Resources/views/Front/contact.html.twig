{% extends 'Front/contact_common.html.twig' %}

{% form_theme form _self %}

{% block _contact_privacy_widget %}
    <div class="checkbox-inline">
        <input type="checkbox" {{ block('widget_attributes') }} />
        <span style="color: #424242">{{ 'contact.form.accept' | trans | capitalize }}</span> <a style="text-decoration: underline;" href="{{ path('front_privacy')}}">{{ 'contact.form.privacy' | trans }}</a>
    </div>
{% endblock %}

{% block contactform %}
    <h2 class="no-m-top extra-m-bottom">{{ 'contact.form.title' | trans | upper }}</h2>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="{{ 'contact.form.send' | trans | upper }}" class="btn btn-grey">
        {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
