{% extends 'Front/layout.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}{{ property.name }} · {{ property.type.name }} · {{ parent() }}{% endblock %}
{% block metadescription %}{% endblock %}
{% block metakeywords %}{% endblock %}

{% block bodyattr %}ng-app="propertiesApp"{% endblock %}

{% block javascriptshead %}
    {{ parent() }}
    <script src="/js/my.js"></script>
{% endblock %}

{% block main %}
    <div class="container" data-ng-controller="PropertyDetailCtrl" data-ng-init="init('{{ localization }}')">
        <div class="row">
            <div class="col-md-8">
                <p><a class="btn btn-default" role="button" href="{{ path('front_properties') }}"><span class="glyphicon glyphicon-chevron-left" data-aria-hidden="true"></span> {{ 'properties.list.button.back' | trans }}</a></p>
            </div>
            <div class="col-md-4">
                {#<div class="btn-group pull-right" role="group" data-aria-label="propertiesPager">#}
                    {#<button type="button" class="btn btn-default" data-aria-label="{{ 'properties.list.button.prev' | trans }}">#}
                        {#<span class="glyphicon glyphicon-chevron-left" data-aria-hidden="true"></span>#}
                    {#</button>#}
                    {#<button type="button" class="btn btn-default" data-aria-label="{{ 'properties.list.button.next' | trans }}">#}
                        {#<span class="glyphicon glyphicon-chevron-right" data-aria-hidden="true"></span>#}
                    {#</button>#}
                {#</div>#}
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 property-detail-left-box">
                {% if property.firstEnabledImage %}
                    <div id="custom_carousel" class="carousel slide" data-ride="carousel">
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            {% for image in property.images %}
                                <div class="item{% if loop.first %} active{% endif %}">
                                    <img src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('800xY') }}" class="img-responsive" alt="{{ image.metaAlt }}"{% if image.metaTitle %} title="{{ image.metaTitle }}"{% endif %}>
                                </div>
                            {% endfor %}
                            {% if property.images | length > 1 %}
                                <div class="controls">
                                    <ul class="nav">
                                        {% for image in property.images %}
                                            <li data-target="#custom_carousel" data-slide-to="{{ loop.index - 1 }}" {% if loop.first %}class="active"{% endif %}>
                                                <a href="#"><img src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('100x60') }}"></a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
                <h2 class="c-orange"><span class="house-icon"></span> {{ property.name | upper }}
                    <div class="btn-group pull-right" role="group" data-aria-label="icons">
                        <button type="button" class="btn btn-default btn-sm"><i class="fa fa-facebook fa-lg"></i></button>
                        <button type="button" class="btn btn-default btn-sm"><i class="fa fa-twitter fa-lg"></i></button>
                        <button type="button" class="btn btn-default btn-sm"><i class="fa fa-envelope fa-lg"></i></button>
                        <button type="button" class="btn btn-default btn-sm"><i class="fa fa-cloud-download fa-lg"></i></button>
                    </div>
                </h2>
                <hr class="thick">
                <p>{{ property.description }}</p>
                <h2 class="c-orange h2-localization"><span class="poi-icon"></span> {{ 'property.localization' | trans | upper }}</h2>
                <ui-gmap-google-map center="localization.coords" zoom="map.zoom" options="map.options" control="map.control">
                    <ui-gmap-circle center="localization.coords" stroke="map.stroke" fill="map.fill" radius="map.radius" visible="map.visible" geodesic="map.geodesic" editable="map.editable" draggable="map.draggable" clickable="map.clickable"></ui-gmap-circle>
                </ui-gmap-google-map>
                <p data-ng-if="!isShowMapArea(localization.control)">[[ localization.address ]]</p>
            </div>
            <div class="col-md-4 property-right-side-box">
                <h2 class="no-m">{{ property.name | upper }}</h2>
                {% if property.showPriceOnlyWithNumbers %}
                    <h3 class="no-m-top extra-m-bottom">{{ property.price | number_format(0, '\'', '.') }} €{% if property.oldPrice %} <small>{{ 'homepage.property.before' | trans }} {{ property.oldPrice | number_format(0, '\'', '.') }} €</small>{% endif %}</h3>
                {% else %}
                    <h3 class="no-m-top extra-m-bottom">{{ 'homepage.property.since' | trans }} {{ property.price | number_format(0, '\'', '.') }} €</h3>
                {% endif %}
                {% include ':Front/commons:property-icons-list.html.twig' with {'property': property} %}
                <hr>
                <h4>{{ 'property.energy.efficiency' | trans | upper }}</h4>
                {% if property.energyClass == 0 %}
                    <p class="c-orange"><i class="fa fa-exclamation-triangle fa-lg"></i> {{ 'property.energy.noclass' | trans }}</p>
                {% elseif property.energyClass == 2 %}
                    <img src="{{ asset('bundles/app/images/icones/eficiencia_energetica/EF_A.png') }}" alt="{{ 'property.energy.efficiency' | trans }} A"/>
                {% elseif property.energyClass == 3 %}
                    <img src="{{ asset('bundles/app/images/icones/eficiencia_energetica/EF_B.png') }}" alt="{{ 'property.energy.efficiency' | trans }} B"/>
                {% elseif property.energyClass == 4 %}
                    <img src="{{ asset('bundles/app/images/icones/eficiencia_energetica/EF_C.png') }}" alt="{{ 'property.energy.efficiency' | trans }} C"/>
                {% elseif property.energyClass == 5 %}
                    <img src="{{ asset('bundles/app/images/icones/eficiencia_energetica/EF_D.png') }}" alt="{{ 'property.energy.efficiency' | trans }} D"/>
                {% elseif property.energyClass == 6 %}
                    <img src="{{ asset('bundles/app/images/icones/eficiencia_energetica/EF_E.png') }}" alt="{{ 'property.energy.efficiency' | trans }} E"/>
                {% elseif property.energyClass == 7 %}
                    <img src="{{ asset('bundles/app/images/icones/eficiencia_energetica/EF_F.png') }}" alt="{{ 'property.energy.efficiency' | trans }} F"/>
                {% elseif property.energyClass == 8 %}
                    <img src="{{ asset('bundles/app/images/icones/eficiencia_energetica/EF_G.png') }}" alt="{{ 'property.energy.efficiency' | trans }} G"/>
                {% else %}
                    <p class="c-orange"><i class="fa fa-exclamation-triangle fa-lg"></i> {{ 'property.energy.pending' | trans }}</p>
                {% endif %}
                <hr>
                <div class="ribbon-wrapper">
                    {% if app.session.flashbag.get('success') | length == 1 %}
                        <h4>{{ 'contact.form.thankyou.title' | trans | upper }}</h4>
                        <p>{{ 'contact.form.thankyou.message' | trans }}</p>
                    {% else %}
                        <h4 class="c-orange">{{ 'property.form' | trans | upper }}</h4>
                        <form method="POST" action="{{ path('front_property', {type: property.type.nameSlug, name: property.nameSlug}) }}" {{ form_enctype(form) }}>
                            {{ form_widget(form) }}
                            <input type="submit" value="{{ 'contact.form.send' | trans }}" class="btn btn-grey">
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascriptsbody %}
    <script type="text/javascript">
        jQuery(document).ready(function() {
            jQuery('#custom_carousel').carousel({
                pause: true,
                interval: false
            }).on('slide.bs.carousel', function(evt) {
                        jQuery('#custom_carousel .controls li.active').removeClass('active');
                        jQuery('#custom_carousel .controls li:eq(' + jQuery(evt.relatedTarget).index() + ')').addClass('active');
            });
        });
    </script>
{% endblock %}

{% block footlangca %}{{ path('front_property', {type: property.type.nameSlug, name: property.nameSlug, '_locale': 'ca'}) }}{% endblock %}
{% block footlanges %}{{ path('front_property', {type: property.type.nameSlug, name: property.nameSlug, '_locale': 'es'}) }}{% endblock %}
{% block footlangen %}{{ path('front_property', {type: property.type.nameSlug, name: property.nameSlug, '_locale': 'en'}) }}{% endblock %}
